!!!
%html.no-js

  %head
    %title
      = yield(:title) || APP_CONFIG[:app_name]
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    = stylesheet_link_tag 'compiled/screen', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print', :media => 'print'
    = render "layouts/ie"
    = render "layouts/html5"
    = stylesheet_link_tag 'smoothness/jquery-ui-1.8.5.custom', :media => 'screen, projection'
    = yield :stylesheets
    = javascript_include_tag :defaults
    = yield :javascript_includes
    %script
      = yield :javascripts
      $(document).ready(function(){
      = yield :javascript_ready 
      = yield :javascript_ready_last
      });
    = csrf_meta_tag
    = yield :head

  %body{ :id => yield(:body_id).blank? ? nil : yield(:body_id) }
    #container
      = render 'layouts/header'
      = render 'layouts/content'
      = render 'layouts/footer'
    %script
      $('button, input:submit, .button_link').button();     
      = yield :javascripts_tail
